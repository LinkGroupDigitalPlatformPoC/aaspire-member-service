<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" (http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd')  version="3.1">
  <display-name>exemplar-application</display-name>
  <filter>
    <filter-name>CORS</filter-name>
    <filter-class>
          com.thetransactioncompany.cors.CORSFilter
       </filter-class>
    <async-supported>true</async-supported>
    <init-param>
      <param-name>cors.configurationFile</param-name>
      <param-value>/WEB-INF/cors.properties</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CORS</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app> 